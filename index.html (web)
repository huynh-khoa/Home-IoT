  <script>
    // === CẤU HÌNH FIREBASE ===
    const firebaseConfig = {
      databaseURL: "https://smarthomevn-ed184-default-rtdb.asia-southeast1.firebasedatabase.app"
    };
    firebase.initializeApp(firebaseConfig);
    const db = firebase.database();

    // === BIẾN TOÀN CỤC ===
    let lastDataTime = Date.now();
    const LIVE_TIMEOUT = 6000;
    let currentTemp = 0;
    let isRaining = false;

    // GAUGE BIẾN
    let currentMode = 1;
    const GAUGE_CIRCUMFERENCE = 490;
    const gaugeFill = document.getElementById('acGauge');
    const gaugeValue = document.getElementById('acValue');
    const gaugeLabel = document.getElementById('acLabel');

    // BIỂU ĐỒ
    let powerChart, tempHumidityChart;

    // === CARD TRỰC TIẾP ===
    function updateLiveStatus() {
      const now = Date.now();
      const status = document.getElementById('liveStatus');
      if (now - lastDataTime > LIVE_TIMEOUT) {
        status.classList.remove('online');
        status.classList.add('offline');
      } else {
        status.classList.remove('offline');
        status.classList.add('online');
      }
    }

    // === CARD THỜI TIẾT ===
    function updateWeatherCard(temp, raining) {
      const tempEl = document.querySelector('.weather-temp');
      const statusEl = document.getElementById('weatherStatus');
      const iconEl = document.getElementById('weatherIcon');

      tempEl.textContent = temp.toFixed(1) + '°';

      if (raining) {
        iconEl.innerHTML = `<img src="https://cdn-icons-png.flaticon.com/512/8907/8907538.png" alt="Mưa giông">`;
        iconEl.className = 'weather-icon thunder';
        statusEl.textContent = 'Đang mưa';
        statusEl.style.color = '#64748b';
      } else {
        iconEl.innerHTML = `<img src="https://cdn-icons-png.flaticon.com/512/4814/4814268.png" alt="Nắng đẹp">`;
        iconEl.className = 'weather-icon sun';
        statusEl.textContent = 'Khô ráo';
        statusEl.style.color = '#f59e0b';
      }
    }

    // === CẬP NHẬT GAUGE ===
    function updateGauge(value, max, unit, label) {
      const percent = Math.min(value / max, 1);
      const offset = GAUGE_CIRCUMFERENCE * (1 - percent);
      gaugeFill.style.strokeDashoffset = offset;

      gaugeValue.innerHTML = `${value.toFixed(1)}<sup>${unit}</sup>`;
      gaugeLabel.textContent = label;

      gaugeValue.classList.remove('show');
      gaugeLabel.classList.remove('show');
      setTimeout(() => {
        gaugeValue.classList.add('show');
        gaugeLabel.classList.add('show');
      }, 100);
    }

    // === CHUYỂN CHẾ ĐỘ GAUGE ===
    function switchMode(mode) {
      currentMode = mode;
      const modes = document.querySelectorAll('.ac-mode');
      modes.forEach((m, i) => m.classList.toggle('active', i === mode));
      updateGaugeFromFirebase();
    }

    // === CẬP NHẬT GAUGE TỪ FIREBASE ===
    function updateGaugeFromFirebase() {
      db.ref('/sensors').once('value', (snapshot) => {
        const data = snapshot.val() || {};
        const power = data.power ?? 0;
        const humidity = data.humidity ?? 0;
        const energy = data.energy ?? 0;

        if (currentMode === 0) {
          updateGauge(humidity, 100, '%', 'Độ ẩm');
        } else if (currentMode === 1) {
          updateGauge(power, 2000, 'W', 'Công suất');
        } else if (currentMode === 2) {
          updateGauge(energy, 100, 'kWh', 'Năng lượng');
        }
      });
    }

    // === CẬP NHẬT THÔNG SỐ ĐIỆN ===
    function updatePowerDetails() {
      db.ref('/sensors').once('value', (snapshot) => {
        const data = snapshot.val() || {};
        document.getElementById('voltageValue').textContent = (data.voltage ?? 0).toFixed(1) + ' V';
        document.getElementById('currentValue').textContent = (data.current ?? 0).toFixed(2) + ' A';
        document.getElementById('frequencyValue').textContent = (data.frequency ?? 0).toFixed(1) + ' Hz';
        document.getElementById('pfValue').textContent = (data.pf ?? 0).toFixed(2);
      });
    }

    // === HỖ TRỢ: LẤY NGÀY ĐẦU THÁNG ===
    function getMonthStart(year, month) {
      return new Date(year, month - 1, 1).getTime();
    }

    // === HỖ TRỢ: TÌM ENERGY GẦN NHẤT TRƯỚC HOẶC SAU ===
    function findEnergyAtOrBefore(entries, timestamp) {
      let result = null;
      entries.forEach(e => {
        if (e.timestamp <= timestamp && (!result || e.timestamp > result.timestamp)) {
          result = e;
        }
      });
      return result;
    }

    function findEnergyAtOrAfter(entries, timestamp) {
      let result = null;
      entries.forEach(e => {
        if (e.timestamp >= timestamp && (!result || e.timestamp < result.timestamp)) {
          result = e;
        }
      });
      return result;
    }

    // === KHỞI TẠO BIỂU ĐỒ ĐIỆN NĂNG (CHỈ 4 THÁNG) ===
    function initPowerChart() {
      const ctx = document.getElementById('powerChart').getContext('2d');
      powerChart = new Chart(ctx, {
        type: 'line',
        data: { labels: [], datasets: [{ data: [], borderColor: '#6a1b9a', fill: true, tension: 0.3 }] },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { display: false } },
          scales: {
            y: { beginAtZero: true, title: { display: true, text: 'kWh' } },
            x: { title: { display: true, text: 'Tháng' } }
          }
        }
      });

      const monthSelect = document.getElementById('monthSelect');
      const today = new Date();
      for (let i = 3; i >= 0; i--) {
        const date = new Date(today.getFullYear(), today.getMonth() - i, 1);
        const month = date.getMonth() + 1;
        const year = date.getFullYear();
        const option = document.createElement('option');
        option.value = `${year}-${month.toString().padStart(2, '0')}`;
        option.textContent = `Tháng ${month}/${year}`;
        if (i === 0) option.selected = true;
        monthSelect.appendChild(option);
      }

      document.getElementById('viewModeSelect').onchange = loadPowerChart;
      monthSelect.onchange = loadPowerChart;

      loadPowerChart();
    }

    // === TẢI DỮ LIỆU BIỂU ĐỒ ĐIỆN NĂNG ===
    function loadPowerChart() {
      const viewMode = document.getElementById('viewModeSelect').value;
      const monthYear = document.getElementById('monthSelect').value;

      if (viewMode === 'overview') {
        loadOverviewChart();
      } else {
        loadMonthlyChart(monthYear);
      }
    }

    // === TỔNG QUAN 4 THÁNG ===
    function loadOverviewChart() {
      const today = new Date();
      const labels = [];
      const months = [];

      for (let i = 3; i >= 0; i--) {
        const date = new Date(today.getFullYear(), today.getMonth() - i, 1);
        const year = date.getFullYear();
        const month = date.getMonth() + 1;
        labels.push(`Tháng ${month}`);
        months.push({ year, month });
      }

      db.ref('/history/sensors').once('value', (snapshot) => {
        const entries = [];
        snapshot.forEach(child => {
          const val = child.val();
          if (val.timestamp && val.energy != null) {
            entries.push({ timestamp: val.timestamp, energy: val.energy });
          }
        });
        entries.sort((a, b) => a.timestamp - b.timestamp);

        const consumptions = [];
        const now = Date.now();

        months.forEach((m, idx) => {
          const startTime = getMonthStart(m.year, m.month);
          const endTime = new Date(m.year, m.month, 0, 23, 59, 59).getTime();

          let energyStart = entries[0];
          for (const e of entries) {
            if (e.timestamp <= startTime && e.timestamp > (energyStart?.timestamp || 0)) {
              energyStart = e;
            }
          }

          let energyEnd = null;

          if (idx === 0) {
            energyEnd = findEnergyAtOrBefore(entries, now);
          } else {
            energyEnd = findEnergyAtOrAfter(entries, endTime) || findEnergyAtOrBefore(entries, endTime);
          }

          let consumption = 0;
          if (energyStart && energyEnd && energyEnd.energy >= energyStart.energy) {
            consumption = energyEnd.energy - energyStart.energy;
          } else if (energyEnd && !energyStart) {
            consumption = energyEnd.energy;
          }

          consumptions[idx] = parseFloat(consumption.toFixed(3));
        });

        powerChart.data.labels = labels;
        powerChart.data.datasets[0].data = consumptions;
        powerChart.options.scales.x.title.text = 'Tháng';
        powerChart.update();
      });
    }

    // === THEO THÁNG: CHIA 5 NGÀY/ĐIỂM ===
    function loadMonthlyChart(monthYear) {
      const [year, month] = monthYear.split('-').map(Number);
      const today = new Date();
      const isCurrentMonth = (today.getFullYear() === year && today.getMonth() + 1 === month);
      const daysInMonth = new Date(year, month, 0).getDate();
      const points = Math.ceil(daysInMonth / 5);
      const labels = [];
      const consumptions = [];

      for (let i = 0; i < points; i++) {
        const day = i * 5 + 1;
        if (isCurrentMonth && day > today.getDate()) break;
        labels.push(`Ngày ${day}`);
        consumptions.push(0);
      }

      db.ref('/history/sensors').once('value', (snapshot) => {
        const entries = [];
        snapshot.forEach(child => {
          const val = child.val();
          if (val.timestamp && val.energy != null) {
            const date = new Date(val.timestamp);
            if (date.getFullYear() === year && date.getMonth() + 1 === month) {
              entries.push({ timestamp: val.timestamp, energy: val.energy });
            }
          }
        });
        entries.sort((a, b) => a.timestamp - b.timestamp);

        const now = Date.now();

        for (let i = 0; i < labels.length; i++) {
          const periodStart = new Date(year, month - 1, i * 5 + 1).getTime();
          const periodEnd = new Date(year, month - 1, (i + 1) * 5, 23, 59, 59).getTime();

          let energyStart = entries[0];
          for (const e of entries) {
            if (e.timestamp <= periodStart && e.timestamp > (energyStart?.timestamp || 0)) {
              energyStart = e;
            }
          }

          let energyEnd = null;

          if (i === labels.length - 1 && isCurrentMonth) {
            energyEnd = findEnergyAtOrBefore(entries, now);
          } else {
            energyEnd = findEnergyAtOrAfter(entries, periodEnd) || findEnergyAtOrBefore(entries, periodEnd);
          }

          let consumption = 0;
          if (energyStart && energyEnd && energyEnd.energy >= energyStart.energy) {
            consumption = energyEnd.energy - energyStart.energy;
          }

          consumptions[i] = parseFloat(consumption.toFixed(3));
        }

        powerChart.data.labels = labels;
        powerChart.data.datasets[0].data = consumptions;
        powerChart.options.scales.x.title.text = 'Ngày';
        powerChart.update();
      });
    }

    // === KHỞI TẠO BIỂU ĐỒ NHIỆT ĐỘ & ĐỘ ẨM ===
    function initTempHumidityChart() {
      const ctx = document.getElementById('tempHumidityChart').getContext('2d');
      tempHumidityChart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: [],
          datasets: [
            { label: 'Nhiệt độ (°C)', data: [], borderColor: '#f56565', fill: false, tension: 0.3, pointRadius: 0 },
            { label: 'Độ ẩm (%)', data: [], borderColor: '#3182ce', fill: false, tension: 0.3, pointRadius: 0 }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { position: 'bottom' } },
          scales: {
            y: { beginAtZero: false },
            x: {
              display: true,
              ticks: {
                callback: function(value, index, values) {
                  const mode = document.getElementById('tempViewMode').value;
                  if (mode === '24hours' && values.length > 0 && index === Math.floor(values.length / 2)) return '24 giờ';
                  if (mode === 'realtime') return value;
                  return '';
                }
              }
            }
          },
          animation: {
            duration: 0
          }
        }
      });

      document.getElementById('tempViewMode').onchange = () => {
        if (window.tempListener) window.tempListener();
        loadTempHumidityChart();
      };

      loadTempHumidityChart();

      window.addEventListener('beforeunload', () => {
        if (window.tempListener) window.tempListener();
      });
    }

    // === TẢI DỮ LIỆU NHIỆT ĐỘ & ĐỘ ẨM – REALTIME & 24 GIỜ ===
    function loadTempHumidityChart() {
      const mode = document.getElementById('tempViewMode').value;
      const now = Date.now();
      const cutoff = mode === 'realtime' ? now - (15 * 60 * 1000) : now - (24 * 60 * 60 * 1000);

      // HỦY LISTENER CŨ (QUAN TRỌNG!)
      if (window.tempListener) {
        window.tempListener();
        window.tempListener = null;
      }

      const query = db.ref('/history/sensors')
        .orderByChild('timestamp')
        .startAt(cutoff);

      window.tempListener = query.on('value', (snapshot) => {
        const entries = [];
        snapshot.forEach(child => {
          const val = child.val();
          if (val.timestamp && val.temperature != null && val.humidity != null) {
            entries.push({ t: val.timestamp, temp: val.temperature, hum: val.humidity });
          }
        });
        entries.sort((a, b) => a.t - b.t);

        let labels = [], tempData = [], humData = [];

        if (mode === 'realtime') {
          // 15 phút gần nhất
          const recent = entries.slice(-15);
          labels = recent.map(e => new Date(e.t).toLocaleTimeString('vi-VN', { hour: '2-digit', minute: '2-digit' }));
          tempData = recent.map(e => e.temp);
          humData = recent.map(e => e.hum);
        } else {
          // 24 GIỜ: Chia thành 24 điểm (mỗi giờ 1 điểm)
          const hourMap = new Map(); // key: "13/11 14h" → { minT, maxT, minH, maxH }

          entries.forEach(e => {
            const d = new Date(e.t);
            const key = `${d.getDate()}/${d.getMonth() + 1} ${d.getHours()}h`;
            if (!hourMap.has(key)) {
              hourMap.set(key, { minT: e.temp, maxT: e.temp, minH: e.hum, maxH: e.hum });
            } else {
              const data = hourMap.get(key);
              data.minT = Math.min(data.minT, e.temp);
              data.maxT = Math.max(data.maxT, e.temp);
              data.minH = Math.min(data.minH, e.hum);
              data.maxH = Math.max(data.maxH, e.hum);
            }
          });

          // Tạo 24 giờ gần nhất
          const now = new Date();
          for (let i = 23; i >= 0; i--) {
            const d = new Date(now);
            d.setHours(d.getHours() - i);
            const key = `${d.getDate()}/${d.getMonth() + 1} ${d.getHours()}h`;
            labels.push(`${d.getHours()}h`);

            if (hourMap.has(key)) {
              const { minT, maxT, minH, maxH } = hourMap.get(key);
              const avgTemp = ((minT + maxT) / 2).toFixed(1);
              const avgHum = ((minH + maxH) / 2).toFixed(1);
              tempData.push(parseFloat(avgTemp));
              humData.push(parseFloat(avgHum));
            } else {
              tempData.push(null);
              humData.push(null);
            }
          }
        }

        // Cập nhật biểu đồ
        tempHumidityChart.data.labels = labels;
        tempHumidityChart.data.datasets[0].data = tempData;
        tempHumidityChart.data.datasets[1].data = humData;

        // Điểm chỉ hiện khi có dữ liệu
        tempHumidityChart.data.datasets.forEach(ds => {
          ds.pointRadius = mode === 'realtime' ? 4 : 5;
          ds.pointHoverRadius = mode === 'realtime' ? 6 : 7;
        });

        // Tooltip & trục X
        tempHumidityChart.options.plugins.tooltip.enabled = true;
        tempHumidityChart.options.scales.x.title.text = mode === 'realtime' ? 'Thời gian' : 'Giờ';
        tempHumidityChart.options.scales.x.ticks.callback = (value, index) => labels[index] || '';

        tempHumidityChart.update('quiet');
      }, (error) => {
        console.error("Lỗi Firebase:", error);
      });
    }

    // === G “Gửi ZIP đi” → tôi gửi ngay! ===
    async function sendControl(topic, value) {
      try {
        const response = await fetch('/control', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ topic, value })
        });
        if (!response.ok) throw new Error('MQTT offline');
      } catch (err) {
        console.error('Lỗi gửi lệnh:', err.message);
        alert('Không thể điều khiển thiết bị. Kiểm tra server!');
      }
    }

    // === GẮN SỰ KIỆN CHO SWITCH ===
    function setupControlSwitches() {
      const switches = document.querySelectorAll('.accessory-item .switch input');
      const topics = ['home/control/pir', 'home/control/rain', 'home/control/clothes'];

      switches.forEach((input, index) => {
        input.addEventListener('change', function() {
          const value = this.checked ? 'ON' : 'OFF';
          sendControl(topics[index], value);
        });

        const deviceKey = ['pir', 'rain', 'clothes'][index];
        db.ref(`/devices/${deviceKey}`).on('value', (snapshot) => {
          const state = snapshot.val();
          const isOn = (state === 'ON' || state === true);
          
          input.checked = isOn;
          const item = input.closest('.accessory-item');
          item.classList.toggle('on', isOn);
          
          const statusEl = item.querySelector('.status');
          if (statusEl) {
            const statusMap = {
              pir: { ON: 'Phát hiện chuyển động', OFF: 'Không phát hiện' },
              rain: { ON: 'Tự động thu khi mưa', OFF: 'Tắt chế độ tự động' },
              clothes: { ON: 'Tự động thu giàn', OFF: 'Không thu giàn' }
            };
            statusEl.textContent = statusMap[deviceKey][isOn ? 'ON' : 'OFF'];
          }
        });
      });
    }

    // === LOGIN & LOGOUT ===
    function handleLogin() {
      const user = document.getElementById('username').value.trim();
      const pass = document.getElementById('password').value;
      if (user === 'admin' && pass === '123') {
        document.getElementById('loginScreen').style.display = 'none';
        document.getElementById('dashboard').style.display = 'block';
        setTimeout(setupControlSwitches, 500);
        updateGaugeFromFirebase();
        updatePowerDetails();
        initPowerChart();
        initTempHumidityChart();
        initPowerStatus();
      } else {
        document.getElementById('errorMsg').style.display = 'block';
      }
    }

    function handleLogout() {
      document.getElementById('loginScreen').style.display = 'flex';
      document.getElementById('dashboard').style.display = 'none';
    }

    // === KHỞI TẠO TRẠNG THÁI ĐIỆN TỪ LOG GẦN NHẤT ===
    function initPowerStatus() {
      db.ref('/logs').orderByKey().limitToLast(1).once('value', (snapshot) => {
        let latestLog = null;
        snapshot.forEach(child => {
          latestLog = child.val();
        });

        if (latestLog && typeof latestLog === 'string') {
          updatePowerStatus(latestLog);
        }
      });
    }

    // === CẬP NHẬT TRẠNG THÁI ĐIỆN ===
    function updatePowerStatus(log) {
      const powerItem = document.getElementById('powerStatusItem');
      if (!powerItem) return;

      if (log.includes('POWER OUTAGE')) {
        powerItem.className = 'accessory-item power-off';
        powerItem.querySelector('i').style.color = '#f56565';
        powerItem.querySelector('.status').textContent = 'Mất điện';
      } else if (log.includes('POWER RESTORED')) {
        powerItem.className = 'accessory-item power-on';
        powerItem.querySelector('i').style.color = '#48bb78';
        powerItem.querySelector('.status').textContent = 'Có điện';
      }
    }

    // === KHỞI ĐỘNG ===
    window.onload = () => {
      document.getElementById('acValue').classList.add('show');
      document.getElementById('acLabel').classList.add('show');
      setInterval(updateLiveStatus, 1000);

      document.querySelectorAll('.ac-mode').forEach((btn, i) => {
        btn.onclick = () => switchMode(i);
      });
    };

    // === LẮNG NGHE REALTIME ===
    db.ref('/sensors/temperature').on('value', (snapshot) => {
      currentTemp = snapshot.val() || 0;
      updateWeatherCard(currentTemp, isRaining);
    });

    db.ref('/logs').limitToLast(1).on('child_added', (snapshot) => {
      const log = snapshot.val();
      if (typeof log === 'string') {
        if (log.includes('RAIN STARTED')) {
          isRaining = true;
          updateWeatherCard(currentTemp, isRaining);
        } else if (log.includes('RAIN STOPPED')) {
          isRaining = false;
          updateWeatherCard(currentTemp, isRaining);
        }
        updatePowerStatus(log);
      }
    });

    db.ref('/lastUpdate').on('value', (snapshot) => {
      const timestamp = snapshot.val();
      if (timestamp) {
        lastDataTime = timestamp;
        updateLiveStatus();
      }
    });

    db.ref('/sensors').on('value', () => {
      updateGaugeFromFirebase();
      updatePowerDetails();
    });
  </script>
</body>
</html>
